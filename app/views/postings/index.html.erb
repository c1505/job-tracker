<h1>Job Postings</h1>

<div class="row">
  <% @postings["results"].each do |f| %>
    <div class="col-md-4 boxy">
      <p><%= f["jobtitle"] %><p>
      <p><%= f["company"] %><p>
      <p><%= f["city"] %><p>
      <p><%= f["snippet"].html_safe %><p>
      <p><%= f["formattedRelativeTime"] %><p>
      <p><%= link_to "Link", f["url"] %><p>
      <%= button_to "Save Job", { action: "create", id: f["jobkey"] },
                                  method: :post%>
      <!-- <%= button_to "Save Job", postings_path(:method => :post)%> -->
    </div>
  <% end %>
</div>


